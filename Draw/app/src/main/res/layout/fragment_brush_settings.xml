<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.onagainapps.sketchallthethings.BrushSettingsFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->


    <com.rarepebble.colorpicker.ColorPickerView
        android:id="@+id/colorPicker"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:colorpicker_showAlpha="true"
        app:colorpicker_showHex="true"
        android:layout_weight="0.85">

    </com.rarepebble.colorpicker.ColorPickerView>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colorPicker_brushSeekBar"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85">

        <Button
            android:text="@string/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/colorPicker_cancelButton"
            android:layout_weight="1" />



        <Button
        android:text="@string/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colorPicker_okButton"
        android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
